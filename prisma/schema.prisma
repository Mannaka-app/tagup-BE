generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int       @id @default(autoincrement())
  email         String    @default("example@email.com")
  password      String?
  sub           String?   @unique
  nickname      String?
  authProvider  String
  profileUrl    String?
  gender        Gender?
  team          Int       @default(0)
  createdAt     DateTime  @default(now())
  teamSeletedAt DateTime?
  winningRate   Int?
  level         Int       @default(0)
  active        Boolean   @default(true)

  teams      Teams      @relation(fields: [team], references: [id])
  userlevels UserLevels @relation(fields: [level], references: [id])

  feedLikes FeedLike[]

  Feeds        Feeds[]
  FeedComments FeedComments[]

  CheerTalk      CheerTalk[]
  CheerTalkLikes CheerTalkLikes[]
  RoomUsers      RoomUsers[]
  Messages       Messages[]
}

enum Gender {
  MALE
  FEMALE
}

model UserLevels {
  id    Int     @id @default(autoincrement())
  level String
  Users Users[]
}

model Teams {
  id    Int     @id @default(autoincrement())
  name  String
  color String?
  emoji String?
  badge String?
  logo  String?

  homeGames     GameSchedule[] @relation("HomeTeam")
  awayGames     GameSchedule[] @relation("AwayTeam")
  Users         Users[]
  Stadium       Stadium[]
  TeamStandings TeamStandings?
  CheerRooms    CheerRooms[]
}

model TeamStandings {
  id           Int      @id @default(autoincrement())
  teamId       Int
  rank         Int
  gamesPlayed  Int // 경기 수 (G)
  wins         Int // 승 (W)
  losses       Int // 패 (L)
  draws        Int // 무 (D)
  winRate      Float // 승률 
  gamesBehind  Float? // 게임차 
  recentRecord String? // 최근 10경기 
  streak       String? // 연승/연패
  updatedAt    DateTime @updatedAt

  team Teams @relation(fields: [teamId], references: [id])

  @@unique([teamId]) // 팀당 하나의 순위만 존재
}

model Stadium {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  homeTeam Int

  teams Teams @relation(fields: [homeTeam], references: [id])

  GameSchedule GameSchedule[]
}

model GameSchedule {
  id          Int        @id @default(autoincrement())
  home        Int
  homeScore   Int        @default(0)
  away        Int
  awayScore   Int        @default(0)
  stadium     Int?
  date        DateTime
  status      GameStatus
  homeTeam    Teams      @relation("HomeTeam", fields: [home], references: [id])
  awayTeam    Teams      @relation("AwayTeam", fields: [away], references: [id])
  stadiumInfo Stadium?   @relation(fields: [stadium], references: [id])
}

enum GameStatus {
  NS
  IN_PROGRESS
  FT
  POST
  CANC
  INTR
  ABD
}

model Feeds {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())

  likes        FeedLike[]
  users        Users          @relation(fields: [userId], references: [id])
  FeedTags     FeedTags[]
  FeedImages   FeedImages[]
  FeedComments FeedComments[]
}

model Tags {
  id       Int        @id @default(autoincrement())
  name     String
  FeedTags FeedTags[]
}

model FeedTags {
  id     Int @id @default(autoincrement())
  feedId Int
  tagId  Int

  tags  Tags  @relation(fields: [tagId], references: [id])
  feeds Feeds @relation(fields: [feedId], references: [id], onDelete: Cascade)
}

model FeedComments {
  id        Int      @id @default(autoincrement())
  feedId    Int
  userId    Int
  content   String
  createdAt DateTime @default(now())

  feeds Feeds @relation(fields: [feedId], references: [id], onDelete: Cascade)
  users Users @relation(fields: [userId], references: [id])
}

model CheerTalk {
  id        Int      @id @default(autoincrement())
  userId    Int
  team      Int
  content   String
  createdAt DateTime @default(now())

  users          Users            @relation(fields: [userId], references: [id])
  CheerTalkLikes CheerTalkLikes[]
}

model CheerTalkLikes {
  id          Int @id @default(autoincrement())
  cheerTalkId Int
  userId      Int

  users     Users     @relation(fields: [userId], references: [id])
  cheerTalk CheerTalk @relation(fields: [cheerTalkId], references: [id])

  @@unique([userId, cheerTalkId])
}

model FeedLike {
  userId Int
  feedId Int

  users Users @relation(fields: [userId], references: [id])
  feeds Feeds @relation(fields: [feedId], references: [id], onDelete: Cascade)

  @@id([userId, feedId])
}

model FeedImages {
  id     Int    @id @default(autoincrement())
  url    String
  feedId Int
  feeds  Feeds  @relation(fields: [feedId], references: [id], onDelete: Cascade)
}

model Rooms {
  id        Int         @id @default(autoincrement())
  title     String
  createdAt DateTime    @default(now())
  RoomUsers RoomUsers[]
  Messages  Messages[]
}

model RoomUsers {
  id       Int      @id @default(autoincrement())
  roomId   Int
  userId   Int
  joinedAt DateTime @default(now())

  rooms Rooms @relation(fields: [roomId], references: [id])
  users Users @relation(fields: [userId], references: [id])
}

model Messages {
  id          Int      @id @default(autoincrement())
  roomId      Int?
  cheerRoomId Int?
  userId      Int
  content     String
  createdAt   DateTime @default(now())

  rooms      Rooms?      @relation(fields: [roomId], references: [id])
  users      Users       @relation(fields: [userId], references: [id])
  cheerRooms CheerRooms? @relation(fields: [cheerRoomId], references: [id])
}

model CheerRooms {
  id          Int    @id @default(autoincrement())
  teamId      Int
  title       String
  thumnailUrl String

  teams    Teams      @relation(fields: [teamId], references: [id])
  Messages Messages[]
}
